<section class="search-row">

    {% set banner = page.media.images|first %}

    {% if banner %}
    <div class="search-image">
        <a href="{{ page.url }}">{{ banner.cropZoom(100,100).html|raw }}</a>
    </div>
    {% endif %}
    <div class="search-item" {% if not banner %} style="margin-left: 0"{% endif %}>
        <div class="search-title">
            <h3><a href="{{ page.url }}">{{ page.title }}</a></h3>
        </div>

        <div class="search-details">
            <span class="search-date"><strong>PÃ¡gina atualizada:</strong> <i class="fa fa-clock-o"></i> {{ page.date|date('d/m/Y - H:i:s') }}</span>
        </div>

        <p>{{ page.summary|raw }}</p>

        <hr />
    </div>
</section>
